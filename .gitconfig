[alias]
	st = status
	co = checkout
	ci = commit
	br = branch

	l = log --all --graph
	ls = ls-files
	lg = log -p
	hist = log --graph --decorate --pretty=oneline --abbrev-commit
	hista = log --graph --decorate --pretty=oneline --abbrev-commit --all
[user]
	name = Shahor
	email = shahor@shahor.fr
[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green
	changed = red
	untracked = cyan
[core]
	editor = /usr/bin/vim
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
