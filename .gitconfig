[alias]
    st = status
	co = checkout
	go = checkout
	ci = commit
	br = branch

	l = log --all --graph
	ls = ls-files
	lg = log -p
	hist = log --graph --pretty=format:'%Cred%h%Creset - %C(bold blue)<%an>%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) ' --abbrev-commit --
	hista = log --graph --pretty=format:'%Cred%h%Creset - %C(bold blue)<%an>%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) ' --abbrev-commit --all --

[user]
	name = Shahor
	email = shahor@shahor.fr
[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green
	changed = red
	untracked = cyan
[core]
	editor = /usr/bin/vim
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	commentchar = ";"
[merge]
    tool = opendiff
[push]
    default = simple
[rerere]
    enabled = false
[log]
    date = local
